{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB Debug (C++20 & Makefile)",
            "type": "cppdbg",
            "request": "launch",
            // üõë L'instruction cruciale : Ex√©cute la t√¢che de build nomm√©e "build (make all)" 
            // AVANT de d√©marrer le d√©bogueur.
            "preLaunchTask": "build (make all)",
            // Le chemin de l'ex√©cutable doit correspondre √† ce que votre Makefile produit
            "program": "${workspaceFolder}/chess26",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
