{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GDB Debug (C++20 & Makefile)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/chess26",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set disassembly flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug Google Tests",
      "type": "cppdbg",
      "request": "launch",

      // 1. Lance la construction pour s'assurer que 'chess_tests' est √† jour
      "preLaunchTask": "CMake: Build",

      // 2. üõë CIBLE SP√âCIFIQUE : L'ex√©cutable de test g√©n√©r√© par CMake
      "program": "${workspaceFolder}/build/chess_tests",

      // 3. Arguments pour ex√©cuter UN SEUL TEST (n√©cessaire pour le d√©bogage cibl√©)
      // Ici, on cible le test 'BoardTest.KnightMove_Initial'
      "args": ["--gtest_filter=BoardTest.KnightMove_Initial"],

      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build", // Travaillez dans le r√©pertoire build
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
