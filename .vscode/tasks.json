{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build (make all)",
			"type": "shell",
			"command": "make",
			"args": [
				"all"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "run",
			"type": "shell",
			"command": "make",
			"args": [
				"run"
			],
			"group": "test",
			"problemMatcher": []
		},
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-I${workspaceFolder}/include",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "Task generated by Debugger."
		}
	]
}